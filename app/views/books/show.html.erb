<%= render 'users/info',user: @user %>
<%= render 'books/new' ,book: @book %>
<body>
  <h1>Book detail</h1>

<table>
 <tbody>
  <tr>
  	<td><%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", size: "60x60" %><%= @user.name %></td>
　　 <td><%= @book.title %></td>
　　 <td><%= @book.body %></td>
    <% if @user.id == current_user.id %>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy", book_path(@book.id),  method: :delete, data:{ confirm: '本当に消しますか?' }, class:"destroy" %></td>
　  <% end %>
  </tr>
 </tbody>
</table>
</body>
