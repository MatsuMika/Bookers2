<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
<h4><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h4>
<ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
</ul>
<% end %>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/info',user: @user %>
			<%= render 'books/new' ,book: @book %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= link_to user_path(book.user) do %>
								<%= attachment_image_tag book.user, :profile_image, fallback: "no-image.png", size: "50x50" %></td>
							<% end %>
						<td><%= link_to book_path(book.id) do %>
								<%= book.title %>
							<% end %>
						</td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
