<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/info',user: @user %>
			<%= render 'books/new' ,book: @book %>
		</div>
		<div class="col-lg-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>				ã€€
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<% if @user==book.user %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", size: "50x50" %></td>
						<td><%= link_to book_path(book.id) do %>
							<%= book.title %>
							<% end %>
						</td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
