<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
     <div ciass="notification is-info">
       <p class="notice"><%= notice %></p>
     </div>
    <% end %>
    
    <% if flash[:alert] %>
     <div ciass="notification is-dagner">
       <p class="alert"><%= alert %></p>
     </div>
     <% end %>

    <%= yield %>
  </body>
</html>
